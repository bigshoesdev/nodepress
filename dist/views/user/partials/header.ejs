<!doctype html>
<html class="no-js" lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title><%= title %></title>
    <meta name="robots" content="noindex, follow" />
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Favicon -->
    <link rel="shortcut icon" type="image/x-icon" href="<%= favicon %>">

    <!-- CSS
	============================================ -->
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="/assets/css/vendor/bootstrap.min.css">

    <!-- Icon Font CSS -->
    <link rel="stylesheet" href="/assets/css/vendor/material-design-iconic-font.min.css">
    <link rel="stylesheet" href="/assets/css/vendor/font-awesome.min.css">
    <link rel="stylesheet" href="/assets/css/vendor/themify-icons.css">
    <link rel="stylesheet" href="/assets/css/vendor/cryptocurrency-icons.css">

    <!-- Plugins CSS -->
    <link rel="stylesheet" href="/assets/css/plugins/plugins.css">

    <!-- Helper CSS -->
    <link rel="stylesheet" href="/assets/css/helper.css">

    <!-- Main Style CSS -->
    <link rel="stylesheet" href="/assets/css/style.css">

    <!-- Custom Style CSS Only For Demo Purpose -->
    <link id="cus-style" rel="stylesheet" href="/assets/css/style.css">
    <style>
        .proImage {
            border-radius: 50px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, .15) !important;
            border: 2px solid transparent !important;
            object-fit: cover !important;
        }

        .avatar {
            width: 50px !important;
            height: 50px !important;
        }

        .format {
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
            text-transform: capitalize;
            display: block;
        }

        @media screen and (max-width: 1000px) {
            .header-logo {
                display: none;
            }
        }

        @media screen and (min-width: 1000px) {
            .header-logo {
                display: block;
            }

            .mobile-logo {
                display: none;
            }
        }
    </style>
</head>

<body>

    <div class="main-wrapper">


        <!-- Header Section Start -->
        <div class="header-section">
            <div class="container-fluid">
                <div class="row justify-content-between align-items-center">

                    <!-- Header Logo (Header Left) Start -->
                    <div class="header-logo col-auto">
                        <a href="/dashboard/index">
                            <img src="/images/GOLDEN-PNG.png" alt="">
                        </a>
                    </div><!-- Header Logo (Header Left) End -->

                    <!-- Header Right Start -->
                    <div class="header-right flex-grow-1 col-auto">
                        <div class="row justify-content-between align-items-center">

                            <!-- Side Header Toggle & Search Start -->
                            <div class="col-auto">
                                <div class="row align-items-center">

                                    <!--Side Header Toggle-->
                                    <div class="col-auto"><button class="side-header-toggle"><i
                                                class="zmdi zmdi-menu"></i></button></div>
                                    <a class="mobile-logo" href="/user/dashboard">
                                        <img src="/images/GOLDEN-PNG.png" alt="" style="height: 35px;">
                                    </a>
                                    <!--Header Search-->
                                    <!-- <div class="col-auto">

                                        <div class="header-search">

                                            <button class="header-search-open d-block d-xl-none"><i class="zmdi zmdi-search"></i></button>

                                            <div class="header-search-form">
                                                <form action="#">
                                                    <input type="text" placeholder="Search Here">
                                                    <button><i class="zmdi zmdi-search"></i></button>
                                                </form>
                                                <button class="header-search-close d-block d-xl-none"><i class="zmdi zmdi-close"></i></button>
                                            </div>

                                        </div>
                                    </div> -->

                                </div>
                            </div><!-- Side Header Toggle & Search End -->

                            <!-- Header Notifications Area Start -->
                            <div class="col-auto">

                                <ul class="header-notification-area">
                                    <li class="adomx-dropdown col-auto">
                                        <!-- Dropdown -->

                                        <a href="/user/posts/add-new"><button
                                                class="btn btn-primary btn-sm">Neuer Beitrag</button></a>


                                    </li>
                                    <li class="adomx-dropdown col-auto">
                                        <!-- Dropdown -->
                                        <% if(user.paid == "paid"){%>
                                        <a href="/blogrecent" target="_blank"><button
                                                class="btn btn-primary btn-sm">Jetzt lesen</button></a>
                                        <% } else {%>
                                        <a href="/afterlogin" target="_blank"><button
                                                class="btn btn-primary btn-sm">Jetzt lesen</button></a>
                                        <% }%>


                                    </li>


                                    <!--Mail-->
                                    <li class="adomx-dropdown col-auto">
                                        <!-- Dropdown -->

                                        <a href="/author/<%= user.usernameslug%>" target="_blank"><button
                                                class="btn btn-primary btn-sm">Profil anzeigen</button></a>


                                    </li>

                                    <!--User-->
                                    <li class="adomx-dropdown col-auto">
                                        <a class="toggle" href="javascript:void(0);">
                                            <span class="user">
                                                <span class="avatar">
                                                    <img src="<%= user.profilePicture %>" class="proImage avatar"
                                                        alt="">
                                                    <span class="status"></span>
                                                </span>
                                                <span class="name text-capitalize"><%= user.username %></span>
                                            </span>
                                        </a>

                                        <!-- Dropdown -->
                                        <div class="adomx-dropdown-menu dropdown-menu-user">
                                            <div class="head">
                                                <h5 class="name text-capitalize"><a
                                                        href="/author/<%= user.username %>"><%= user.username %></a>
                                                </h5>
                                                <a class="mail" href="mailto:<%= user.email %>"><%= user.email %></a>
                                            </div>
                                            <div class="body">
                                                <ul>
                                                    <li><a href="/user/profile"><i
                                                                class="zmdi zmdi-account"></i>Profile</a></li>
                                                    <li><a href="/user/all-posts"><i class="fa fa-bullhorn"></i>All
                                                            Posts</a></li>
                                                </ul>
                                                <ul>
                                                    <li><a href="/log-out"><i class="zmdi zmdi-lock-open"></i>Sign
                                                            out</a></li>
                                                </ul>
                                            </div>
                                        </div>

                                    </li>

                                </ul>

                            </div><!-- Header Notifications Area End -->

                        </div>
                    </div><!-- Header Right End -->

                </div>
            </div>
        </div><!-- Header Section End -->