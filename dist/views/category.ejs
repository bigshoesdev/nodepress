<%- include ./partials/header %>

<div class="category-banner" style="background-image: linear-gradient(#0000003d, #00000040), url('<%= background %>');">
  <div class="container">
    <div class="inner-container">
      <div class="category-banner-content">
        <h5 style="color: white;">Kategorie</h5>
        <h1 style="color: white;"><%= cat%></h1>
      </div>
    </div>
  </div>
</div>
<div class="category-content-main">
  <div class="container">
    <div class="inner-category-content-main">
      <div class="row">
        <div class="col-md-8">
          <div class="category-content-main-left">
            <% for(var i = 0; i < (post.length / 3) ; i ++) { %>
            <div class="row">
              <% for(var j = 0; j < 2; j ++) {%>
              <% if((i*3 + j) < post.length) {%>
              <div class="col-md-6">
                <div class="recommnet">
                  <div class="recommnet-img">
                    <img src="<%= post[i*3 + j].file %>">
                  </div>
                  <div class="recommnet-cate">
                    <a href="javascript:void(0);"><span><%= post[i*3 + j].category.name%></span></a>
                  </div>
                  <div class="recommnet-heading2">
                    <p style="overflow-wrap: break-word;font-size: 18px;">
                      <% if(post[i*3 + j].postedBy.roleId == "admin"){%>
                        <a href="/dype/<%= post[i*3 + j].category.slug%>/<%= post[i*3 + j].slug %>"
                          style="color:
                          black;"><%= post[i*3 + j].title.charAt(0).toUpperCase() + post[i*3 + j].title.substring(1) %>
                          </a>
                      <%} else {%>
                      <a href="/publisher/<%= post[i*3 + j].postedBy.username.toLowerCase()%>/<%= post[i*3+j].category.slug.toLowerCase()%>/<%= post[i*3 + j].slug %>" style="color:
                          black;"><%= post[i*3 + j].title.charAt(0).toUpperCase() + post[i*3 + j].title.substring(1) %>
                      </a>
                      <%}%>
                    </p>
                    <p style="overflow-wrap: break-word;"><% if(post[i*3 + j].summary != undefined) { %>
                      <%= post[i*3 + j].summary %> <% } %></p>
                  </div>
                  <div class="recommnet-madeby">
                    <div class="recommnet-madeby-img">
                      <img src="<%= post[i*3 + j].postedBy.profilePicture%>">
                    </div>
                    <div class="recommnet-madeby-details">
                      <h5><%= post[i*3 + j].postedBy.firstName%> <%= post[i*3 + j].postedBy.lastName%></h5>
                      <p><%= post[i*3 + j].createdAt.toDateString() %></p>
                    </div>
                  </div>
                </div>
              </div>
              <% } %>
              <% } %>
            </div>
            <% } %>
          </div>
        </div>
        <div class="col-md-4">
          <div class="category-content-main-right">
            <div class="category-search">
              <div class="category-search-heading">
                <h4>Tranding Now</h4>
              </div>
              <div class="category-search-bg1">
                <div class="category-search-bg1-contant">
                  <div class="one-round1">
                    <span>1</span>
                  </div>
                  <div class="two-round1">
                    <h3>Be My Guest Concert</h3>
                    <p>February 14, 2017</p>
                  </div>
                </div>
              </div>
              <div class="category-search-bg2">
                <div class="category-search-bg2-contant">
                  <div class="one-round2">
                    <span>2</span>
                  </div>
                  <div class="two-round2">
                    <h3>The top 10 places to go hiking tomorrow</h3>
                    <p>July 15, 2017</p>
                  </div>
                </div>
              </div>
              <div class="category-search-bg3">
                <div class="category-search-bg3-contant">
                  <div class="one-round3">
                    <span>3</span>
                  </div>
                  <div class="two-round3">
                    <h3>Waking up at early today</h3>
                    <p>March 22, 2017</p>
                  </div>
                </div>
              </div>
            </div>
            <div class="category-search">
              <div class="category-search-heading">
                <h4>Recently Posted</h4>
              </div>
              <div class="category-search-content">
                <div class="row">
                  <div class="col-md-3">
                    <div class="category-search-content-img">
                      <img src="/images/cateimg-11.jpg">
                    </div>
                  </div>
                  <div class="col-md-9">
                    <div class="category-search-content-text">
                      <h3>The top 10 places to go hiking tomarrow</h3>
                      <p>July 15, 2017</p>
                    </div>
                  </div>
                </div>
              </div>
              <div class="category-search-content">
                <div class="row">
                  <div class="col-md-3">
                    <div class="category-search-content-img">
                      <img src="/images/cateimg-12.jpg">
                    </div>
                  </div>
                  <div class="col-md-9">
                    <div class="category-search-content-text">
                      <h3>We encountered an actual bird paradise</h3>
                      <p>April 21, 2017</p>
                    </div>
                  </div>
