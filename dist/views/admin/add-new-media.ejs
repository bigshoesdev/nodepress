<%- include ./partials/header %>
<link href="https://transloadit.edgly.net/releases/uppy/v0.25.2/dist/uppy.min.css" rel="stylesheet">
<link rel="stylesheet" href="/icofont/icofont.min.css">
<link rel="stylesheet" href="/css/light.css">
<style>
    body {
        background: #f8f9fa !important;
    }

    .format {
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        text-transform: capitalize;
        display: block;
    }

    .form-control {
        padding: 5px 11px !important;
    }

    input[type=checkbox] {
        border: 1px solid #b4b9be;
        background: #fff;
        color: #555;
        clear: none;
        cursor: pointer;
        display: inline-block;
        line-height: 0;
        height: 16px;
        margin: -4px 4px 0 0;
        outline: 0;
        padding: 0 !important;
        text-align: center;
        vertical-align: middle;
        width: 16px;
        min-width: 16px;
        -webkit-appearance: none;
        box-shadow: inset 0 1px 2px rgba(0, 0, 0, 0.1);
        transition: 0.05s border-color ease-in-out;
    }

    input[type=checkbox]:checked:before {
        margin: 1px 0 0 -1px;
        color: #1e8cbe;
        content: "ï€Œ";
        font: normal normal normal 13px/1 FontAwesome;
    }

    .btn-bsa {
        background: #acbb16;
        color: #fff;
        transition: all ease-in-out .3s;
    }

    .btn-bsa:hover {
        background: #000;
        color: #fff;
    }

    .file-list {
        flex-grow: 1;
        overflow: auto;
        padding: 15px;
    }

    .file-wraps {
        flex-wrap: wrap;
        margin: 0px -10px;
        display: flex;
    }

    .file-item {
        padding: 0px 10px;
        margin-bottom: 20px;
        flex-shrink: 0;
    }

    .inner {
        position: relative;
        border: 1px solid #DADEE0;
        cursor: pointer;
        height: 100%;
        border-radius: 2px;
        -webkit-user-select: none;
    }

    .file-thumb {
        text-align: center;
    }

    .file-name {
        padding: 7px;
        position: absolute;
        bottom: 0px;
        left: 0px;
        right: 0px;
        background: rgba(0, 0, 0, 0.6);
        font-size: 14px;
        height: 54px;
        overflow: hidden;
        text-overflow: ellipsis;
        color: white;
    }

    .file-thumb img {
        object-fit: cover;
    }

    .inner.active:before {
        content: "";
        position: absolute;
        top: -4px;
        left: -4px;
        right: -4px;
        bottom: -4px;
        border: 4px solid #007bff;
        border-radius: 2px;
    }

    .file-checked-status {
        position: absolute;
        top: 3px;
        right: 3px;
        border-radius: 50%;
        background: #007bff;
        height: 24px;
        width: 24px;
        display: -webkit-flex;
        display: flex;
        -webkit-align-content: center;
        align-content: center;
        -webkit-justify-content: center;
        justify-content: center;
    }

    .file-checked-status svg {
        overflow: hidden;
        vertical-align: middle;
        fill: white;
        width: 18px;
    }

    .browser-actions {
        background: white;
        border-top: 1px solid #DADEE0;
        padding: 10px;
    }

    @media screen and (max-width: 1365px) {
        .file-item {
            width: 14.2%;
        }
    }
    .uppy-Dashboard-inner {
        width: 100% !important;
        background: #fff !important;
    }
</style>
<%- include ./partials/sidebar %>
<!-- Content Body Start -->
<div class="content-body">
    <!-- Page Headings Start -->
    <div class="row justify-content-between align-items-center mb-10">

        <!-- Page Heading Start -->
        <div class="col-md-8 col-lg-auto mb-20">
            <div class="page-heading">
                <h3>Add New Media</h3>
            </div>
        </div><!-- Page Heading End -->

    </div><!-- Page Headings End -->
    <%- include ../partials/msg %>

    <div class="row">

        <!--Manage Product List Start-->
        <div class="col-12">
            <div class="bg-white shadow-sm">
                <div id="drag-drop-area" class="bg-white"></div>
            </div>
        </div>
        <!--Manage Product List End-->
    </div>
</div><!-- Content Body End -->

<!-- Footer Section Start -->
<div class="footer-section">
    <div class="container-fluid">

        <div class="footer-copyright text-center">
            <p class="text-body-light">
                <script>document.write(new Date().getFullYear())</script> &copy; <a
                    href="<%= siteLink %>"><%= siteTitle %></a></p>
        </div>

    </div>
</div><!-- Footer Section End -->

