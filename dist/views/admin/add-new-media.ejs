    $('.demo').lightcase();
    var uppy = Uppy.Core({ autoProceed: false })
    uppy.use(Uppy.Dashboard, { target: '#drag-drop-area', inline: true, height: 450, showProgressDetails: true, proudlyDisplayPoweredByUppy: false })
