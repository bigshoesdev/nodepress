<%- include ./partials/header %>
<link rel="stylesheet" href="/icofont/icofont.min.css">
<style>
    body {
        background: #f8f9fa !important;
    }

    .format {
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        text-transform: capitalize;
        display: block;
    }

    .form-control {
        padding: 5px 11px !important;
    }

    input[type=checkbox] {
        border: 1px solid #b4b9be;
        background: #fff;
        color: #555;
        clear: none;
        cursor: pointer;
        display: inline-block;
        line-height: 0;
        height: 16px;
        margin: -4px 4px 0 0;
        outline: 0;
        padding: 0 !important;
        text-align: center;
        vertical-align: middle;
        width: 16px;
        min-width: 16px;
        -webkit-appearance: none;
        box-shadow: inset 0 1px 2px rgba(0, 0, 0, 0.1);
        transition: 0.05s border-color ease-in-out;
    }

    input[type=checkbox]:checked:before {
        margin: 1px 0 0 -1px;
        color: #1e8cbe;
        content: "";
        font: normal normal normal 13px/1 FontAwesome;
    }

    input[type=radio] {
        border: 1px solid #b4b9be;
        background: #fff;
        color: #555;
        clear: none;
        cursor: pointer;
        display: inline-block;
        line-height: 0;
        height: 16px;
        margin: -4px 4px 0 0;
        outline: 0;
        padding: 0 !important;
        text-align: center;
        vertical-align: middle;
        width: 16px;
        min-width: 16px;
        -webkit-appearance: none;
        box-shadow: inset 0 1px 2px rgba(0, 0, 0, 0.1);
        transition: 0.05s border-color ease-in-out;
    }

    input[type=radio]:checked:before {
        margin: 1px 0 0 -1px;
        color: #1e8cbe;
        content: "";
        font: normal normal normal 13px/1 FontAwesome;
    }

    .btn-bsa {
        background: #acbb16;
        color: #fff;
        transition: all ease-in-out .3s;
    }

    .btn-bsa:hover {
        background: #000;
        color: #fff;
    }
    a.nav-item.nav-link.active {
        border-top: solid 2px #17a2b8 !important;
        box-shadow: 0 .125rem .25rem rgba(0, 0, 0, .075) !important;
    }

    a.nav-item.nav-link {
        border-radius: 0;
    }
</style>
<%- include ./partials/sidebar %>
<!-- Content Body Start -->
<div class="content-body">
    <!-- Page Headings Start -->
    <div class="row justify-content-between align-items-center mb-10">

        <!-- Page Heading Start -->
        <div class="col-md-8 col-lg-auto mb-20">
            <div class="page-heading">
                <h3>Social Login Configuration</h3>
            </div>
        </div><!-- Page Heading End -->

    </div><!-- Page Headings End -->
    <%- include ../partials/msg %>
    <div class="row">
        <div class="col-12">
            <div class="bg-white shadow-sm">
                <div class="p-3">
                    <nav>
                        <div class="nav nav-tabs nav-fill shadow-sm" id="nav-tab" role="tablist">
                            <a class="nav-item nav-link active" id="nav-home-tab" data-toggle="tab" href="#nav-home"
                                role="tab" aria-controls="nav-home" aria-selected="true"><i class="ti-facebook"></i>
                                Facebook</a>
                            <a class="nav-item nav-link" id="nav-profile-tab" data-toggle="tab" href="#nav-profile"
                                role="tab" aria-controls="nav-profile" aria-selected="false"><i
                                    class="ti-google"></i> Google</a>
                                    <a class="nav-item nav-link" id="nav-twitter-tab" data-toggle="tab" href="#nav-twitter"
                                role="tab" aria-controls="nav-twitter" aria-selected="false"><i
                                    class="ti-twitter"></i> Twitter</a>
                                    <a class="nav-item nav-link" id="nav-vkon-tab" data-toggle="tab" href="#nav-vkon"
                                role="tab" aria-controls="nav-vkon" aria-selected="false"><i
                                    class="fa fa-vk"></i> Vkontakte</a>
                        </div>
                    </nav>
                    <div class="tab-content py-3 px-3 px-sm-0" id="nav-tabContent">
                        <div class="tab-pane fade show active" id="nav-home" role="tabpanel"
                            aria-labelledby="nav-home-tab">
                            <form action="/settings/social-login/facebook/update" method="POST">
                                <div class="form-group mt-4">
                                    <label for=""><b>App ID*</b></label>
                                    <input type="text" name="socialLogin.facebook.appId" class="form-control" placeholder="App ID"
                                        value="<%if(settings!==null){%><%if(settings.socialLogin !== undefined && settings.socialLogin.facebook !== undefined){%><%= settings.socialLogin.facebook.appId %><%}%><%}%>" required>
                                </div>
                                <div class="form-group mt-4">
                                        <label for=""><b>App Secret*</b></label>
                                        <input type="text" name="socialLogin.facebook.appSecret" class="form-control" placeholder="App Secret"
                                            value="<%if(settings!==null){%><%if(settings.socialLogin !== undefined && settings.socialLogin.facebook !== undefined){%><%= settings.socialLogin.facebook.appSecret %><%}%><%}%>" required>
                                    </div>
                                <div class="form-group mt-4 text-right">
                                    <button class="btn btn-bsa">Save Changes</button>
                                </div>
                            </form>
                        </div>
                        <div class="tab-pane fade" id="nav-profile" role="tabpanel" aria-labelledby="nav-profile-tab">
                            <form action="/settings/social-login/google/update" method="POST">
                                <div class="form-group mt-4">
                                    <label for=""><b>Client ID*</b></label>
                                    <input type="text" name="socialLogin.google.clientId" class="form-control"
                                        placeholder="Client ID" value="<%if(settings!==null){%><%if(settings.socialLogin !== undefined && settings.socialLogin.google !== undefined){%><%= settings.socialLogin.google.clientId %><%}%><%}%>"
                                        required>
                                </div>
                                <div class="form-group mt-4">
                                    <label for=""><b>Client Secret*</b></label>
                                    <input type="text" class="form-control" name="socialLogin.google.clientSecret"
                                        value="<%if(settings!==null){%><%if(settings.socialLogin !== undefined && settings.socialLogin.google !== undefined){%><%= settings.socialLogin.google.clientSecret %><%}%><%}%>"
                                        placeholder="Client Secret" required>
                                </div>
                                <div class="form-group mt-4 text-right">
                                    <button class="btn btn-bsa">Save Changes</button>
                                </div>
                            </form>
                        </div>
                        <div class="tab-pane fade" id="nav-twitter" role="tabpanel" aria-labelledby="nav-twitter-tab">
                                <form action="/settings/social-login/twitter/update" method="POST">
                                    <div class="form-group mt-4">
                                        <label for=""><b>Consumer Key*</b></label>
                                        <input type="text" name="socialLogin.twitter.consumerKey" class="form-control"
                                            placeholder="Consumer Key" value="<%if(settings!==null){%><%if(settings.socialLogin !== undefined && settings.socialLogin.twitter !== undefined){%><%= settings.socialLogin.twitter.consumerKey %><%}%><%}%>"
                                            required>
                                    </div>
                                    <div class="form-group mt-4">
                                        <label for=""><b>Consumer Secret*</b></label>
                                        <input type="text" class="form-control" name="socialLogin.twitter.consumerSecret"
                                            value="<%if(settings!==null){%><%if(settings.socialLogin !== undefined && settings.socialLogin.twitter !== undefined){%><%= settings.socialLogin.twitter.consumerSecret %><%}%><%}%>"
                                            placeholder="Consumer Secret" required>
                                    </div>
                                    <div class="form-group mt-4 text-right">
                                        <button class="btn btn-bsa">Save Changes</button>
                                    </div>
                                </form>
                            </div>
                            <div class="tab-pane fade" id="nav-vkon" role="tabpanel" aria-labelledby="nav-vkon-tab">
                                <form action="/settings/social-login/vkon/update" method="POST">
                                    <div class="form-group mt-4">
                                        <label for=""><b>Client ID (App ID)*</b></label>
                                        <input type="text" name="socialLogin.vkon.clientId" class="form-control"
                                            placeholder="Client Id or App ID" value="<%if(settings!==null){%><%if(settings.socialLogin !== undefined && settings.socialLogin.vkon !== undefined){%><%= settings.socialLogin.vkon.clientId %><%}%><%}%>"
                                            required>
                                    </div>
                                    <div class="form-group mt-4">
                                        <label for=""><b>Client Secret (Secure Key)*</b></label>
                                        <input type="text" class="form-control" name="socialLogin.vkon.clientSecret"
                                            value="<%if(settings!==null){%><%if(settings.socialLogin !== undefined && settings.socialLogin.vkon !== undefined){%><%= settings.socialLogin.vkon.clientSecret %><%}%><%}%>"
                                            placeholder="Client Secret or Secure Key" required>
                                    </div>
                                    <div class="form-group mt-4 text-right">
                                        <button class="btn btn-bsa">Save Changes</button>
                                    </div>
                                </form>
                            </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div><!-- Content Body End -->

<!-- Footer Section Start -->
<div class="footer-section">
    <div class="container-fluid">

        <div class="footer-copyright text-center">
            <p class="text-body-light">
                <script>document.write(new Date().getFullYear())</script> &copy; <a
