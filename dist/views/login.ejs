<%- include ./partials/header %>



<div class="login">
   <div class="container">
     <div class="inner-login">
       <div class="login-heading">
         <h1>Login</h1>
       </div>
       <div class="login-form">
         <%- include('partials/msg') %>
         <form action="/login" method="POST">
           <div class="form-group">
             <label class="login-label" for="text">Email address <span>*</span></label>
             <input type="email" name="email" id="email" placeholder="Email Address" required class="form-control login-input">
           </div>
           <div class="form-group">
             <label class="login-label" for="pwd">Password <span>*</span></label>
             <input type="password" name="password" id="password" placeholder="Password" required class="form-control login-input">
           </div>
           <div class="form-group form-check">
             <label class="login-label" class="form-check-label">
               <input class="form-check-input" type="checkbox"> Remember me
             </label>
           </div>
           <div class="login-btn">
             <button type="submit">Log In</button>
           </div>
           <div class="lost-your-password">
             <a href="/forgot-password">Lost your password?</a>
           </div>
         </form>
       </div>
     </div>
   </div>
 </div>
 


<%- include ./partials/footer %>