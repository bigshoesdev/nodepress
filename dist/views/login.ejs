<%- include ./partials/header %>
<link href="/css/login.css" rel="stylesheet" />

<div class="login">
  <div class="container">
    <div class="inner-login">
      <div class="login-heading">
        <h1>Einloggen</h1>
      </div>
      <div class="login-form">
        <%- include('partials/msg') %>
        <form action="/login" method="POST">
          <div class="form-group">
            <label class="login-label" for="text">E-Mail Adresse <span>*</span></label>
            <input type="email" name="email" id="email" placeholder="E-Mail Adresse" required
              class="form-control login-input">
          </div>
          <div class="form-group">
            <label class="login-label" for="pwd">Kennwort <span>*</span></label>
            <input type="password" name="password" id="password" placeholder="Kennwort" required
              class="form-control login-input">
          </div>
          <div class="form-group">
            <div class="g-recaptcha" data-sitekey="your_site_key"></div>
          </div>
          <div class="form-group form-check">
            <label class="login-label" class="form-check-label">
              <input class="form-check-input" type="checkbox"> Erinnern Sie sich an mich
            </label>
          </div>
          <div class="login-btn">
            <button type="submit">Einloggen</button>
          </div>
          <div class="login-btn row">
            <div class="col-md-6 text-center">
              <a href="/auth/google/login" class="google btn btn-primary">
                <i class="fa fa-google fa-fw"></i> Log In with Google+
              </a>
            </div>
            <div class="col-md-6 text-center">
              <a href="/auth/apple/login" class="apple btn btn-primary">
                <i class="fa fa-apple fa-fw"></i> Log In with Apple
              </a>
            </div>
          </div>
          <div class="lost-your-password">
            <a href="/forgot-password">Passwort vergessen?</a>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>


<script src="https://www.google.com/recaptcha/api.js?onload=onloadCallback&render=explicit"
    async defer>
</script>
<%- include ./partials/footer %>