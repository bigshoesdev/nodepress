<%- include ./partials/header %>
<link href="/css/login.css" rel="stylesheet" />

<div class="login">
  <div class="container">
    <div class="inner-login">
      <div class="login-heading">
        <h1>Anmelden</h1>
      </div>
      <div class="login-form">
        <%- include('partials/msg') %>
        <form action="/login" method="POST">
          <div class="form-group row text-center">
            <div class="col-lg-6">
              <a href="/auth/google/login" class="btn btn-social btn-social-modal btn-social-facebook google">
                <i class="fa fa-google fa-2x"></i>
              </a>
            </div>
            <div class="col-lg-6">
              <a href="/auth/apple/login" class="btn btn-social btn-social-modal btn-social-facebook apple">
                <i class="fa fa-apple fa-2x"></i>  
              </a>
            </div>
          </div>
          <hr>
          <div class="form-group">
            <label class="login-label" for="text">E-Mail <span>*</span></label>
            <input type="email" name="email" id="email" placeholder="E-Mail Adresse" required
              class="form-control login-input">
          </div>
          <div class="form-group">
            <label class="login-label" for="pwd">Kennwort <span>*</span></label>
            <input type="password" name="password" id="password" placeholder="Kennwort" required
              class="form-control login-input">
          </div>
          <div class="form-group">
            <div class="g-recaptcha" data-sitekey="6LfyU-sUAAAAAO-NcoCZ73A6TO_ujV8t4txCrRLA"></div>
            <span id="captcha-error"></span>
          </div>
          <div class="form-group form-check">
            <label class="login-label" class="form-check-label">
              <input class="form-check-input" type="checkbox"> Erinnern dich an mich
            </label>
          </div>
          <div class="login-btn">
            <button type="submit">Anmelden</button>
          </div>
          <div class="lost-your-password">
            <a href="/forgot-password">Passwort vergessen?</a>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
<script src="https://www.google.com/recaptcha/api.js?" async defer>
</script>
<%- include ./partials/footer %>