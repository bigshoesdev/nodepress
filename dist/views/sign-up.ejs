   <div class="clearfix"></div>
   </div>
   <nav id="main-menu" class="stick d-lg-block d-none">
      <div class="container">
         <div class="menu-primary">
            <ul>
               <% for(let item of mainMenu) { %>
               <li class=""><a
                     href="<%= item.link %>"><%= item.name.charAt(0).toUpperCase() + item.name.substring(1) %></a></li>
               <% } %>
               <% if(user) { %>
               <% if(user.roleId == 'admin') { %>
               <li class="menu-item-has-children"><a href="/dashboard/index"><%= user.username %></a>
                  <ul class="sub-menu">
                     <li><a href="/dashboard/index">Control Panel</a></li>
                     <li><a href="/author/<%= user.username%>">Profile</a></li>
