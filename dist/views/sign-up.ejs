                     <% } %>
            </div>
            <form action="/search" method="get" class="search-form d-lg-flex float-right">
               <a href="javascript:void(0)" class="searh-toggle">
                  <i class="icon-search"></i> Search...
               </a>
               <input type="text" class="search_field" placeholder="" value="" name="q" />
