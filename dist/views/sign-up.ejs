<%- include ./partials/header %>
<link rel="stylesheet" href="/css/sign-up.css">

<div class="login">
   <div class="container">
      <div class="inner-login">
         <div class="login-heading">
            <h1>Anmelden</h1>
         </div>
         <div class="login-form">
            <%- include('partials/msg') %>
            <form action="/sign-up" method="POST" class="newsletterForm">
               <div class="form-group row text-center">
                  <div class="col-lg-6">
                    <a href="/auth/google" class="btn btn-social btn-social-modal btn-social-facebook google">
                      <i class="fa fa-google fa-2x"></i>
                    </a>
                  </div>
                  <div class="col-lg-6">
                    <a href="/auth/apple" class="btn btn-social btn-social-modal btn-social-facebook apple">
                      <i class="fa fa-apple fa-2x"></i>  
                    </a>
                  </div>
                </div>
                <hr>
               <div class="form-group">
                  <label class="login-label" for="text">Benutzername <span>*</span></label>
                  <input type="text" name="username" id="username" placeholder="Benutzername" required
                     class="form-control login-input" />
               </div>
               <div class="form-group">
                  <label class="login-label" for="text">E-Mail<span>*</span></label>
                  <input type="email" name="email" id="email" placeholder="E-Mail" required
                     class="form-control login-input">
               </div>
               <div class="form-group">
                  <label class="login-label" for="pwd">Kennwort <span>*</span></label>
                  <input type="password" name="password" id="password" placeholder="Kennwort" required
                     class="form-control login-input">
               </div>
               <div class="form-group">
                  <label class="login-label" for="pwd">Kennwort wiederholen<span>*</span></label>
                  <input type="password" name="cPassword" id="cPassword" placeholder="Kennwort anpassen" required
                     class="form-control login-input">
               </div>
               <div class="form-group">
                  <div class="g-recaptcha" data-sitekey="6LfyU-sUAAAAAO-NcoCZ73A6TO_ujV8t4txCrRLA"></div>
                  <span id="captcha-error"></span>
                </div>
               <div class="login-btn">
                  <button type="submit">Jetzt registrieren</button>
               </div>
               <div class="lost-your-password">
                  <a href="/login">Ich bin bereits registriert. Einloggen.</a>
               </div>
            </form>
         </div>
      </div>
   </div>
</div>
<script src="https://www.google.com/recaptcha/api.js?" async defer>
</script>
<%- include ./partials/footer %>