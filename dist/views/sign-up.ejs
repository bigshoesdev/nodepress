<%- include ./partials/header %>



<div class="login">
   <div class="container">
      <div class="inner-login">
         <div class="login-heading">
            <h1>Sign Up</h1>
         </div>
         <div class="login-form">
            <%- include('partials/msg') %>
            <form action="/sign-up" method="POST" class="newsletterForm">
               <div class="form-group">
                  <label class="login-label" for="text">Username <span>*</span></label>
                  <input type="text" name="username" id="username" placeholder="Username"
                     class="form-control login-input" />
               </div>
               <div class="form-group">
                  <label class="login-label" for="text">Email address <span>*</span></label>
                  <input type="email" name="email" id="email" placeholder="Email Address"
                     class="form-control login-input">
               </div>
               <div class="form-group">
                  <label class="login-label" for="pwd">Password <span>*</span></label>
                  <input type="password" name="password" id="password" placeholder="Password"
                     class="form-control login-input">
               </div>
               <div class="form-group">
                  <label class="login-label" for="pwd">Conform password <span>*</span></label>
                  <input type="password" name="cPassword" id="cPassword" placeholder="Conform Password"
                     class="form-control login-input">
               </div>
               <div class="form-group">
                  <label class="login-label" for="text">Instagram <span>(optional)</span></label>
                  <input type="text" name="instagram" id="instagram" placeholder="Instagram"
                     class="form-control login-input" />
               </div>
               <div class="form-group">
                  <label class="login-label" for="text">Facebook <span>(optional)</span></label>
                  <input type="text" name="facebook" id="facebook" placeholder="Facebook" 
                     class="form-control login-input" />
               </div>
               <div class="form-group">
                  <label class="login-label" for="text">Linkedin <span>(optional)</span></label>
                  <input type="text" name="linkedin" id="linkedin" placeholder="Linkedin" 
                     class="form-control login-input" />
               </div>
               <div class="form-group">
                  <label class="login-label" for="text">Google <span>(optional)</span></label>
                  <input type="text" name="google" id="google" placeholder="Google" 
                     class="form-control login-input" />
               </div>
               <div class="form-group">
                  <label class="login-label" for="text">Other <span>(optional)</span></label>
                  <input type="text" name="other" id="other" placeholder="Other" 
                     class="form-control login-input" />
               </div>
               <div class="login-btn">
                  <button type="submit">Register</button>
               </div>
               <div class="lost-your-password">
                  <a href="/login">Am a member, Login</a>
               </div>
            </form>
         </div>
      </div>
   </div>
</div>

<%- include ./partials/footer %>