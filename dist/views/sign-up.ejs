<%- include ./partials/header %>



<div class="login">
   <div class="container">
      <div class="inner-login">
         <div class="login-heading">
            <h1>Anmelden</h1>
         </div>
         <div class="login-form">
            <%- include('partials/msg') %>
            <form action="/sign-up" method="POST" class="newsletterForm">
               <div class="form-group">
                  <label class="login-label" for="text">Benutzername <span>*</span></label>
                  <input type="text" name="username" id="username" placeholder="Benutzername" required
                     class="form-control login-input" />
               </div>
               <div class="form-group">
                  <label class="login-label" for="text">E-Mail Adresse <span>*</span></label>
                  <input type="email" name="email" id="email" placeholder="E-Mail Adresse" required
                     class="form-control login-input">
               </div>
               <div class="form-group">
                  <label class="login-label" for="pwd">Kennwort <span>*</span></label>
                  <input type="password" name="password" id="password" placeholder="Kennwort" required
                     class="form-control login-input">
               </div>
               <div class="form-group">
                  <label class="login-label" for="pwd">Kennwort anpassen <span>*</span></label>
                  <input type="password" name="cPassword" id="cPassword" placeholder="Kennwort anpassen" required
                     class="form-control login-input">
               </div>
               <div class="login-btn">
                  <button type="submit">Registrieren Sie</button>
               </div>
               <div class="form-group row">
                  <%= mainSettings.facebookLogin%>
                  <% if(mainSettings.googleLogin == true) { %>
                  <div class="col-12">
                     <a href="/auth/google" class="btn-social btn-social-modal btn-social-google">
                        <i class="icon-google"></i>&nbsp;Connect with Google</a>
                  </div>
                  <% } %> <% if(mainSettings.appleLogin == true) { %>
                  <div class="col-12">
                     <a href="/auth/twitter" class="btn-social btn-social-modal btn-social-twitter">
                        <i class="icon-twitter"></i>Connect with Twitter</a>
                  </div>
                  <% } %>
               </div>
               <div class="lost-your-password">
                  <a href="/login">Bin Mitglied, Login</a>
               </div>
            </form>
         </div>
      </div>
   </div>
</div>

<%- include ./partials/footer %>