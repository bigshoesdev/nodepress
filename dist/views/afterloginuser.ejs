    <a href="/log-out" class="searchbar"><i class="fa fa-sign-out profileicon"></i>Sign Out</a>
    <% } %>
    <% } else {%>
    <a class="searchbar" href="/publisher"><span style="padding-left: 10px;cursor:pointer">Blogger
        werden</span></a>
    <a class="searchbar" href="/afterlogin"><span style="padding-left: 10px;cursor:pointer">Inhalte
        entdecken</span></a>
    <% } %>
  </div>
  <header class="sticky" id="header">
    <section class="container">
      <section style="display: flex; align-items: center;" class="row" id="logo_menu">
        <section class="col-xs-1 col-md-2 menu-logo">
          <div class="header-maindiv">
            <div class="inner-header-maindiv-icon">
              <div class="header-logo">
                <a href="/"><img src="/images/GOLDEN-PNG.png"></a>
              </div>
              <div id="myTopnav" class="topnav">
                <form action="/search" method="get" class="search-form d-lg-flex" id="searchForm">
                  <div class="container">
                    <a type="button" href="javascript:void(0)" class="closebtn"
                      style="right: 15%; padding-left: 10px; padding-right: 10px;" onclick="searchForm()"
                      id="closebtn"><i class="fa fa-search"></i></a>
                    <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
                    <input id="q" type="text" placeholder="Suche" name="q" value="" onfocus="displaySearchbtn()" />
                    <label>Suche Inhalte, die dich begeistern</label>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </section>
        <div class="col-xs-11 col-md-10 menu-small" style="text-align: right;">
          <a class="searchbar" href="#"><span style="font-size:20px; padding-left: 10px;cursor:pointer"
              onclick="openNav()"><i class="fa fa-search" aria-hidden="true"></i></span></a>
          <a class="searchbar" href="#"><span style="font-size:20px; padding-left: 10px;cursor:pointer"
              onclick="openSidebar()"><i class="fa fa-bars" aria-hidden="true"></i></span></a>
        </div>
        <div class="col-xs-11 col-md-10 menu-large" style="text-align: right;">
          <% if(user) { %>
          <% if (user.paid == "free") { %>
          <a class="searchbar" href="/afterlogin"><span style="padding-left: 10px;cursor:pointer">Inhalte
              entdecken</span></a>
          <a class="searchbar" href="/publisher"><span style="padding-left: 10px;cursor:pointer">Blogger
              werden</span></a>
          <a class="searchbar" href="/ourwork"><span style="padding-left: 10px;cursor:pointer">Exklusive
              Inhalte</span></a>
          <% } else if(user.paid == 'paid') { %>
          <a class="searchbar" href="/ourwork"><span style="padding-left: 10px;cursor:pointer">Exklusive
              Inhalte</span></a>
          <a class="searchbar" href="/blogrecent"><span style="padding-left: 10px;cursor:pointer">Feed</span>
          </a>
          <a class="searchbar" href="/publisher"><span style="padding-left: 10px;cursor:pointer">Blogger
              werden</span></a>
          <% } %>
          <a class="searchbar" href="#"><span style="font-size:20px; padding-left: 10px;cursor:pointer"
              onclick="openNav()"><i class="fa fa-search" aria-hidden="true"></i></span></a>
          <div class="dropdown" style="display: contents;">
            <a class="dropdown-toggle" type="button" data-toggle="dropdown" style="font-size: 20px;"><i
                class="fa fa-user"></i><span class="caret"></span></a>
            <ul class="dropdown-menu profile">
              <% if(user.roleId == 'admin') { %>
              <li><span><%= user.username%></span></li>
              <li><a href="/dashboard/index" class="searchbar"><i class="fa fa-cog profileicon"></i>Dashboard</a>
              </li>
              <li><a href="/author/<%= user.usernameslug%>" class="searchbar"><i
                    class="fa fa-user-circle profileicon"></i>Mein Profil</a></li>
              <li><a href="/log-out" class="searchbar"><i class="fa fa-sign-out profileicon"></i>Sign Out</a>
              </li>
            </ul>
            <% } else {%>
            <li><span><%= user.username%></span></li>
            <li><a href="/user/dashboard" class="searchbar"><i class="fa fa-cog profileicon"></i>Dashboard</a>
            </li>
            <li><a href="/author/<%= user.usernameslug%>" class="searchbar"><i
                  class="fa fa-user-circle profileicon"></i>Mein Profil</a></li>
            <li><a href="/log-out" class="searchbar"><i class="fa fa-sign-out profileicon"></i>Sign Out</a></li>
            <% } %>
            </ul>
          </div>
          <a class="searchbar" href="#"><span style="font-size:20px; padding-left: 10px;cursor:pointer"
              onclick="openNotification()"><i class="fa fa-bell-o" aria-hidden="true"></i></span></a>
          <% } else {%>
          <a class="searchbar" href="/publisher"><span style="padding-left: 10px;cursor:pointer">Blogger
              werden</span></a>
          <a class="searchbar" href="/afterlogin"><span style="padding-left: 10px;cursor:pointer">Inhalte
              entdecken</span></a>
          <a class="searchbar" href="#"><span style="font-size:20px; padding-left: 10px;cursor:pointer"
              onclick="openNav()"><i class="fa fa-search" aria-hidden="true"></i></span></a>
          <a href="/sign-up" class="searchbar"><span style="font-size:20px; padding-left: 10px;cursor:pointer"><i
                class="fa fa-user"></i></span><span
              style="position: absolute; bottom: -10px; left: -3px;font-size: 10px;">Registrieren</span></a>
          <a href="/login" class="searchbar"><span style="font-size:20px; padding-left: 10px;cursor:pointer"><i
                class="fa fa-sign-in"></i></span><span
              style="position: absolute; bottom: -10px;left: 4px; font-size: 10px;">Einloggen</span></a>
          <%}%>
        </div>
      </section>
    </section>
  </header>
  <div style="width: 100%;" class="after-login-banner">
    <div id="demo" class="carousel slide" data-ride="carousel">
      <div class="carousel-inner">
        <% for(var i = 0; i < editorsPicker.length; i ++){%>
          <%= editorsPicker[i].category.slug%>
          <%
          var url = "#";
          var url1 = "";
          var url2 = editorsPicker[i].category.slug + "/" + editorsPicker[i].slug;
          if(editorsPicker[i].postedBy.roleId == "admin"){
            url1 = "/d/";
            url = url1 + url2;
          }else if(editorsPicker[i].postedBy.roleId == "user"){
            url1 = "/p/";
            url = url1 + url2;
          }
          %>
          <div url="<%= url%>"
            class="carousel-item top-div bg1 <% if(i == 0){%>active<%}%>" style="background-image: linear-gradient(#00000061, #00000069), url('<%= editorsPicker[i].file%>')">
            <div class="carousel-caption">
              <h5><span><a href="/kategorie/<%= editorsPicker[i].category.slug%>" target="_blank"
                    style="color: white;"><%= editorsPicker[i].category.name%></a></span></h5>
              <p style="font-size: 60px; font-weight: 900;"><%= editorsPicker[i].title%></p>
            </div>
          </div>
          <% }%>
        </div>
        </div>
        </div>
        <div class="after-login-page-content">
          <div class="container-fluid">
            <div class="inner-after-login-page-content">
              <h4 style="font-family: Montserrat;">Lieblingsautoren</h4>
              <hr>
              <div class="row">
                <% if(authorarticle.length == 0){%>
                <div class="col-12 text-center">
                  <h3 style="color: black; font-family: Montserrat;">Folge Autoren, um Artikelvorschläge zu erhalten</h3>
                </div>
                <%}%>
                <div id="owl-carousel0" class="owl-carousel owl-theme">
                  <% for(var i = 0; i < authorarticle.length; i ++){%>
                <%
                     var url = "/p/" + authorarticle[i].category.slug + "/" + authorarticle[i].slug;
                     if(authorarticle[i].postedBy.roleId == "admin"){
                       url = "/d/" + authorarticle[i].category.slug + "/" + authorarticle[i].slug;
                     }
                    %>
                <div class="item">
                  <div class="slider_item">
                    <div class="content-two-zoom">
                      <div class="content-two" url="<%= url%>"
                        style="margin: 30px;background-image: linear-gradient(#00000073, #0000007d), url('<%= authorarticle[i].file%>');">
                        <div class="content-two-btn">
                          <a href="/kategorie/<%= authorarticle[i].category.slug%>"
                            target="_blank"><%= authorarticle[i].category.name%></a>
                        </div>
                        <div class="content-two-text">
                          <h2 style="overflow-wrap: anywhere;"><%= authorarticle[i].title%></h2>
                          <p style="overflow-wrap: anywhere;"><%= authorarticle[i].summary%>
                          </p>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
                <%}%>
              </div>
            </div>
            <h4 style="font-family: Montserrat;">Beliebt</h4><hr>
            <div class="row">
              <div id="owl-carousel" class="owl-carousel owl-theme">
                <% for(var i = 0; i < popular.length; i ++){%>
                <%
                  var url = "/p/" + popular[i].category.slug + "/" + popular[i].slug;
                  if(popular[i].postedBy.roleId == "admin"){
                    url = "/d/" + popular[i].category.slug + "/" + popular[i].slug;
                  }
                  %>
                <div class="item">
                  <div class="slider_item">
                    <div class="content-one" url="<%= url%>" style="height: 500px; margin: 30px;">
                      <div class="content-one-img"
                        style="background-image:linear-gradient(#00000061, #00000069), url('<%= popular[i].file%>');">
                        <a href="/kategorie/<%= popular[i].category.slug%>"
                          style="border: 1px solid white; left: 60px !important;"
                          target="_blank"><%= popular[i].category.name%></a>
                        <p class="ranking-number">&nbsp;<%= i + 1%>&nbsp;</p>

                      </div>
                      <div class="content-one-text">
                        <h4 style="display: flex; overflow-wrap: anywhere;"><%= popular[i].title%></h4>
                        <p><%= popular[i].summary%></p>
                      </div>
                    </div>
                  </div>
                </div>
                <% }%>
              </div>
            </div>
            <div class="row" style="margin-left: 150px;">
              <% var length = categories.length;
                 if(length > 6){ length = 6;}
              %>
              <% for(var i = 0; i < length; i ++) {%>
              <div class="col-sm-12 col-md-6 col-lg-4 category-item">
                 <a href="/kategorie/<%= categories[i].slug%>" target="_blank">
                    <span class="category-img">
                       <img class="img-fluid" 
                       src="<%= categories[i].background%>"></span>
                    <span class="category-name">
                       <p class="underline"><%= categories[i].name%></p>
                       <!-- <h6><%= categories[i].description%></h6> -->
                    </span>
                 </a>
              </div>
              <% } %>
           </div>
            <br>
            <h4 style="font-family: Montserrat;">Empfehlungen</h4>
            <hr>
            <div class="row">
              <div id="owl-carousel1" class="owl-carousel owl-theme">
                <% for(var i = 0; i < random.length; i ++){%>
                <%
                  var url = "/p/" + random[i].category.slug + "/" + random[i].slug;
                  if(random[i].postedBy.roleId == "admin"){
                    url = "/d/" + random[i].category.slug + "/" + random[i].slug;
                  }
                  %>
                <div class="item">
                  <div class="slider_item">
                    <div class="content-four" url="<%= url%>"
                      style="background-image:linear-gradient(#00000061, #00000069), url('<%= random[i].file%>'); background-size: cover;">
                      <div class="content-four-text">
                        <h2 style="display: flex; overflow-wrap: anywhere;"><%= random[i].title%></h2>
                        <p><%= random[i].summary%></p>
                      </div>
                    </div>
                  </div>
                </div>
                <%}%>
              </div>
            </div>
            <div class="classic_enhanced_style minimal_stlye">
              <section class="container">
                 <div class="inner-after-login-page-content">
                    <div class="row">
                       <% for(var i = 0; i < random.length; i ++) {%>
                          <% 
                          var url="#";
                          if(random[i].postedBy.roleId == "admin"){
                             url = "/d/" + random[i].category.slug + "/" + random[i].slug;
                          }else {
                             url = "/p/" + random[i].category.slug + "/" + random[i].slug;
                          }
                          %>
                       <div class="col-md-12 col-lg-4">
                          <div class="content-two-text last">
                             <p><%= random[i].category.name%></p>
                             <h2><%= random[i].title%></h2>
                             <p><%= random[i].summary%></p>
                             <a class="read-more" href="<%= url%>" target="_blank">Mehr erfahren<i class="fa fa-arrow-right" aria-hidden="true"></i></a>
                          </div>
                       </div>
                       <% }%>
                    </div>
                 </div>
              </section>
           </div>



        </div>
      </div>
    </div>
  </div>

