<%- include ./partials/header %>

<div class="banner">
   <div class="container">
      <div class="inner-header">
         <h2>Results For "<%= search.charAt(0).toUpperCase() + search.substring(1) %>"</h2>
         <h5><%= data.length %> Results Found</h5>
      </div>
   </div>
</div>
<div class="showing-result">
   <div class="container">
      <div class="inner-showing-result">
         <div class="row">
            <div class="col-md-8">
               <div class="results">
                  <% for(var i = 0; i < (data.length / 3) ; i ++) { %>
                  <div class="row">
                     <% for(var j = 0; j < 3; j ++) {%>
                     <% if((i*3 + j) < data.length) {%>
                     <div class="col-md-4 col-sm-6">
                        <div class="startresult">
                           <div class="bg-1">
                              <img src="<%= data[i*3 + j].file%>"/>
                           </div>
                           <div class="bg-1-contant">
                              <% if(data[i*3 + j].postedBy.roleId == "admin"){%>
                                 <h3><a href="/dype/<%= data[i*3 + j].category.name.replace(/ /g, '').toLowerCase()%>/<%= data[i*3 + j].slug %>"
                                   style="color:
                                   black;"><%= data[i*3 + j].title.charAt(0).toUpperCase() + data[i*3 + j].title.substring(1) %>
                                   </a>
                                 </h3>
                               <%} else {%>
                               <h3><a href="/publisher/<%= data[i*3 + j].postedBy.username%>/<%= data[i*3+j].category.name.replace(/ /g, '').toLowerCase()%>/<%= data[i*3 + j].slug %>" style="color:
                                   black;"><%= data[i*3 + j].title.charAt(0).toUpperCase() + data[i*3 + j].title.substring(1) %>
                               </a></h3>
                               <%}%>
                              <p><%= data[i*3 + j].summary%></p>
                           </div>
                        </div>
                     </div>
                     <% } %>
                     <% } %>
                  </div>
                  <% }%>
               </div>
            </div>
            <div class="col-md-4">
               <div class="popular-search">
                  <div class="popular-search-heading">
                     <h4>Popular Posts</h4>
                  </div>
                  <div class="popular-search-bg1">
                     <div class="popular-search-bg1-contant">
                        <h3>Doing a cross country road trip</h3>
                        <p>July 15, 2014</p>
                     </div>
                  </div>
                  <div class="popular-search-bg2">
                     <div class="popular-search-bg2-contant">
                        <h3>We encountered a food paradise</h3>
                        <p>April 21, 2013</p>
                     </div>
                  </div>
                  <div class="popular-search-bg3">
                     <div class="popular-search-bg3-contant">
                        <h3>Deep down in water</h3>
                        <p>March 23, 2013</p>
                     </div>
                  </div>
               </div>
            </div>
         </div>
      </div>
   </div>
</div>

<%- include ./partials/footer %>