<%- include ./partials/header %>
<style>
   .inforcheckbox {
      width: 25px;
      height: 25px;
   }

   .infockdiv {
      text-align: right;
   }

   .infolabeldiv {
      text-align: left;
   }
   .footer-main{
    width: 100%;
    bottom: 0;
  }
   .next-btn button {
      width: 20%;
      padding: 10px;
      background: #3452ff;
      border: none;
      border-radius: 4px;
      font-weight: 600;
      color: white;
      transition: 0.5s;
   }
   .next-btn {
      text-align: right;
   }
</style>
<div class="login">
   <div class="container">
      <div class="login-heading">
         <h1>How did you hear about this platform ?</h1>
      </div>
      <div class="login-form">
         <form action="/information-from" method="POST" class="newsletterForm">
            <div class="form-group infockdiv row">
               <div class="col-md-5 col-sm-5 col-xs-5 ckbox">
                  <input type="checkbox" name="fromgoogle" id="fromgoogle" class="inforcheckbox" />
               </div>
               <div class="col-md-7 col-sm-7 infolabeldiv">
                  <label class="login-label" for="text">Google </label>
               </div>
            </div>
            <div class="form-group infockdiv row">
               <div class="col-md-5 col-sm-5 col-xs-5 ckbox">
                  <input type="checkbox" name="fromfacebook" id="fromfacebook" class="inforcheckbox" />
               </div>
               <div class="col-md-7 col-sm-7 infolabeldiv">
                  <label class="login-label" for="text">Facebook </label>
               </div>
            </div>
            <div class="form-group infockdiv row">
               <div class="col-md-5 col-sm-5 col-xs-5 ckbox">
                  <input type="checkbox" name="fromlinkedin" id="fromlinkedin" class="inforcheckbox" />
               </div>
               <div class="col-md-7 col-sm-7 infolabeldiv">
                  <label class="login-label" for="text">Linkedin </label>
               </div>
            </div>
            <div class="form-group infockdiv row">
               <div class="col-md-5 col-sm-5 col-xs-5 ckbox">
                  <input type="checkbox" name="frominstagram" id="frominstagram" class="inforcheckbox" />
               </div>
               <div class="col-md-7 col-sm-7 infolabeldiv">
                  <label class="login-label" for="text">Instagram </label>
               </div>
            </div>
            <div class="form-group infockdiv row">
               <div class="col-md-5 col-sm-5 col-xs-5 ckbox">
                  <input type="checkbox" name="fromother" id="fromother" class="inforcheckbox" />
               </div>
               <div class="col-md-7 col-sm-7 infolabeldiv">
                  <label class="login-label" for="text">Other </label>
               </div>
            </div>
            <div class="next-btn">
               <button type="submit">Next</button>
            </div>
         </form>
      </div>
   </div>
</div>
<%- include ./partials/footer %>