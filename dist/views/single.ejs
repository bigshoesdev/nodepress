<%- include ./partials/header %>


<div class="dark-blog-banner"
    style="background-image: linear-gradient(#0000003d, #00000040) , url('<%= article.file%>');">
    <div class="container">
        <div class="inner-dark-blog">
            <div class="dark-blog-banner-contant">
                <div class="food-music-btn">
                    <span><a href="/category/<%= article.category.slug %>" style="color: white;"><%= article.category.name%></a></span>
                </div>
                <div class="dark-blog-banner-heading">
                    <h1 style="color: white;"><%= article.title%></h1>
                </div>
                <div class="dark-blog-banner-headingdown">
                    <span style="color: white;"><%= article.postedBy.firstName%> <%= article.postedBy.lastName%></span>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- <div class="dark-blog-content-one"> -->
<div class="container">
    <article class="inner-dark-blog-content-one" style="overflow:hidden;">
        <%- article.body %>
    </article>
</div>
<!-- </div> -->

<div class="dark-blog-makedby">
    <div class="container">
        <div class="inner-dark-blog-makeby">
            <div class="row">
                <div class="col-md-1">
                    <div class="dark-blog-makedby-img">
                        <img src="<%= article.postedBy.profilePicture%>">
                    </div>
                </div>
                <div class="col-md-9">
                    <div class="dark-blog-makedby-details">
                        <h2><%= article.postedBy.firstName%> <%= article.postedBy.lastName%></h2>
                        <p>Following User <%= article.postedBy.following.length%> member</p>
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="follow-btn">
                        <a href="/follow-user?followerId=<%= article.postedBy._id %>">Follow</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="dark-blog-posts">
    <div class="container-fluid">
        <div class="inner-dark-blog-posts">
            <div class="row">
                <div class="col-md-6">
                    <div class="dark-blog-previous-posts">
                        <div class="dark-blog-previous-posts-content">
                            <h5>Previous Post</h5>
                            <h2>Doing a cross country road trip</h2>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="dark-blog-next-posts">
                        <div class="dark-blog-next-posts-content">
                            <h5>Next Post</h5>
                            <h2>Doing down in the water</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="recommended-for-you">
    <div class="container">
        <div class="inner-recommended-for-you">
            <div class="recommnet-heading-main">
                <h2>Recommended For You</h2>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <div class="recommnet">
                        <div class="recommnet-img">
                            <img src="<%= article.file%>">
                        </div>
                        <div class="recommnet-cate">
                            <a href="#"><span><%= article.category.name%></span></a>
                        </div>
                        <div class="recommnet-heading">
                            <h2><%= article.title%></h2>
                        </div>
                        <div class="recommnet-madeby">
                            <div class="recommnet-madeby-img">
                                <img src="/images/dark-blog-make.png">
                            </div>
                            <div class="recommnet-madeby-details">
                                <h5><%= article.postedBy.firstName%> <%= article.postedBy.lastName%></h5>
                                <p> <%= article.createdAt.toDateString() %></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<section class="footer-main" id="footer">
    <div class="container">
        <div class="innner-footer-main">
            <div class="footer-social-icons">
                <a href="#"><i class="fa fa-twitter" aria-hidden="true"></i></a>
                <a style="padding: 11px 20px;" href="#"><i class="fa fa-facebook" aria-hidden="true"></i></a>
                <a style="padding: 12px 13px;" href="#"><i class="fa fa-google-plus" aria-hidden="true"></i></a>
                <a href="#"><i class="fa fa-yelp" aria-hidden="true"></i></a>
            </div>
            <div class="footer-copyright">
                <p>&copy; Dype 2020.</p>
            </div>
            <div class="dropup">
                <button class="dropbtn"><i class="fa fa-share-alt" aria-hidden="true"></i></button>
                <div class="dropup-content">
                    <a href="#"><i class="fa fa-pinterest" aria-hidden="true"></i></a>
                    <a href="#"><i class="fa fa-linkedin" aria-hidden="true"></i></a>
                    <a href="#"><i class="fa fa-twitter" aria-hidden="true"></i></a>
                    <a href="#"><i class="fa fa-facebook" aria-hidden="true"></i></a>
                </div>
            </div>
            <div class="upvote-btn">
                <form action="/article/upvote" method="POST" id="upvoteForm">
                    <input type="text" name="articleId" value="<%= article._id%>" />
                </form>
                <a id="return-to-top" href="javascript:void(0);" onclick="upvote()"><i class="fa fa-arrow-up"
                        aria-hidden="true"></i>
                    <p>Upvote</p>
                    <p><%= article.upvote.count%></p>
                </a>
            </div>
        </div>
    </div>
</section>
<style>
    #return-to-top {
        position: fixed;
        top: 43%;
        left: 0;
        background: #fff;
        width: 92px;
        height: 88px;
        display: none;
        text-decoration: none;
        border-radius: 0px 25px 25px 0px;
        -webkit-transition: all 0.3s linear;
        -moz-transition: all 0.3s ease;
        -ms-transition: all 0.3s ease;
        -o-transition: all 0.3s ease;
        transition: all 0.3s ease;
    }

    #return-to-top i {
        color: #797474;
        margin: 0;
        position: relative;
        left: 1px;
        top: 0;
        font-size: 19px;
        -webkit-transition: all 0.3s ease;
        -moz-transition: all 0.3s ease;
        -ms-transition: all 0.3s ease;
        -o-transition: all 0.3s ease;
        transition: all 0.3s ease;
    }
</style>
<script src="/js/aos.js" type="text/javascript"></script>
<script src="/js/jquery-2.1.3.min.js" type="text/javascript"></script>
<script src="/js/bootstrap1.min.js" type="text/javascript"></script>
<script src="/js/owl.carousel.js" type="text/javascript"></script>
<script src="/js/script1.js" type="text/javascript"></script>
<script>
    function upvote() {
        $('#upvoteForm').submit();
    }
    $(window).scroll(function () {
        if ($(this).scrollTop() >= 0) {        // If page is scrolled more than 50px
            $('#return-to-top').fadeIn(200);    // Fade in the arrow
        } else {
            $('#return-to-top').fadeOut(200);   // Else fade out the arrow
        }
    });
    function getmonth(data) {
        switch (data) {
            case 0:
                return 'Jan';
                break;
            case 1:
                return 'Feb';
                break;
            case 2:
                return 'March';
                break;
            case 3:
                return 'Apr';
                break;
            case 4:
                return 'May';
                break;
            case 5:
                return 'Jun';
                break;
            case 6:
                return 'Jul';
                break;
            case 7:
                return 'Aug';
                break;
            case 8:
                return 'Sep';
                break;
            case 9:
                return 'Oct';
                break;
            case 10:
                return 'Nov';
                break;
            case 11:
                return 'Dec';
                break;
            default: break;
        }
    };
</script>
