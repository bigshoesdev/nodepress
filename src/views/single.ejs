                                </div>
                            </div>
                            </form>
                            `
        if ('<%= mainSettings.newsletter %> == true') {
            $('.entry-main-content p').last().prepend(n)
        }
        document.querySelector('.entry-main-content').querySelectorAll('a').forEach(a => a.setAttribute('target', '_blank'))
        $('.single-comment').hide();
        $('#showAll').click(e => {
            $('.single-comment').fadeIn();
            $('#showAll').hide();
        })

        const form = document.querySelector('#commentForm');
        form.addEventListener('submit', e => {
            e.preventDefault();
            let comment = document.querySelector('#comment').value;
            let name = document.querySelector('#name').value;
            let email = document.querySelector('#email').value;
            let slug = document.querySelector('#slug').value;
            let articleId = document.querySelector('#articleId').value;

            const data = {
                comment: comment,
                name: name,
                email: email,
                slug: slug,
                articleId: articleId,
            };

            fetch(form.getAttribute('action'), {
                method: "POST",
                body: JSON.stringify(data),
                headers: {
                    "Content-Type": "application/json"
                }
            }).then(response => response.text())
                .then(data => {
                    console.log(data)
                    swal('Success', data, 'success');
                    form.reset()
                })
                .catch(e => {
                    swal('Oops', "There was an error processing that, pls check your internet connection and try again", 'error');
                })
        })
        
        $('.comment-reply-link').click(e => {
            e.preventDefault();
            $('.commentForm').attr('action', '/reply');
            $('.commentForm').attr('id', ''); 
        });
    </script>