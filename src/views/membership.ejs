<%- include ./partials/header %>
<style>
  .paymentdialog-background {
    position: fixed;
    top: 0;
    left: 0;
    z-index: 99999;
    width: 100vw;
    height: 100vh;
    background-color: #ababab2b;
    opacity: 0.85;
    display: none;
  }

  @media screen and (max-width: 1000px) {
    .paymentdialog {
      width: 84%;
      left: 8%;
      position: fixed;
      height: 60%;
      top: 25%;
      z-index: 999999;
      text-align: center;
      overflow-x: hidden;
      overflow-y: auto;
      display: none;
      background-color: #e6e6e6;
      border-radius: 20px;
    }

    .dialog-header {
      border-bottom: 1px solid;
      height: 10%;
      align-items: center;
      padding-bottom: 63px;
      background: white;
    }

    .btn-stripe {
      width: 100%;
      height: 36px;
      margin-bottom: 14px;
    }

    .stripicon {
      font-size: 18px;
    }
    .stripetext {
      font-size: 18px;
      font-style: oblique;
      margin-left: 10px;
    }
  }

  .closedialog {
    position: absolute;
    color: red;
    top: -2%;
    right: 5%;
  }

  .closedialog:hover {
    color: #98E0F2;
  }

  .dialog-container {
    margin: 50px;
  }


  @media screen and (min-width: 1000px) {
    .paymentdialog {
      position: fixed;
      width: 35%;
      height: 60%;
      top: 25%;
      left: 33%;
      z-index: 999999;
      text-align: center;
      overflow-x: hidden;
      overflow-y: auto;
      display: none;
      background-color: #e6e6e6;
      border-radius: 20px;
    }

    .btn-stripe {
      width: 100%;
      height: 48px;
      margin-bottom: 14px;
    }

    .dialog-header {
      border-bottom: 1px solid;
      height: 10%;
      align-items: center;
      padding-bottom: 63px;
      background: white;
    }

    .stripicon {
      font-size: 28px;
    }

    .stripetext {
      font-size: 23px;
      font-style: oblique;
      margin-left: 10px;
    }
  }
</style>
<div class="memberhip-plan">
  <div class="container">
    <div class="inner-membership-plan">
      <div class="row">
        <div class="col-md-6">
          <div class="Basic-plan" data-aos="fade-up" data-aos-duration="1500">
            <div class="Basic-plan-content" style="margin: auto;">
              <div class="Basic-plan-head">
                <h5>Basic</h5>
                <h1>Kostenlos</h1>
                <h4>/Monat</h4>
              </div>
              <div class="Basic-plan-brief" >
                <ul style="text-align: left; width: 80%; margin: auto; color: #6b6a6a;">
                  <li>Veröffentliche Beiträge und erreiche Menschen</li>
                  <li>Folge Autoren</li>
                  <li> Greife aus Inhalte aus zwei ausgewählten Kategorien zu</li>
                </ul>
              </div>
              <div class="Basic-plan-btn">
                <form action="/onboarding" method="POST">
                  <input type="hidden" name="categoryCount" value="2" />
                  <%if(user){%>
                  <% if(user.paid == "paid"){%>
                  <a href="/downgrade?user=<%= user.id%>" style="color: #fff;border: 1px solid #fff;padding: 13px 15px;text-decoration: none !important;background: transparent;
                 font-size: 16px;" type="button">Premium kündigen<i style="margin-left: 10px;" class="fa fa-long-arrow-right"
                      aria-hidden="true"></i></a>
                  <%} else if(user.paid == "free") {%>
                  <!-- <button type="submit"><span>Basic-Member werden</span><span><i class="fa fa-long-arrow-right" aria-hidden="true"></i></span></button> -->
                  <% }%>
                  <% }%>
                </form>
              </div>
            </div>
          </div>
        </div>
        <div class="col-md-6">
          <div class="premium-plan" data-aos="fade-up" data-aos-duration="1500">
            <div class="premium-plan-content" style="margin: auto;">
              <div class="premium-plan-head">
                <h2>1 Monat kostenlos testen</h2>
                <h5>Premium</h5>
                <h1>5,99 €</h1>
                <h4>/Monat</h4>
              </div>
              <div class="premium-plan-brief">
                <ul style="text-align: left; width: 80%; margin: auto; color: #6b6a6a;">
                  <li>Veröffentliche Beiträge und erreiche Menschen</li>
                  <li>Genieße Inhalte ganz ohne Begrenzung</li>
                  <li>Greife auf Inhalte aus über 30 Kategorien zu</li>
                  <li>Lese exklusive Inhalte von qualifizierten Bloggern</li>
                  <li>Markiere inspirierende Passagen</li>
                  <li>Speichere Beiträge</li>
                  <li>Folge Autoren</li>
                  <li>Kündige jederzeit</li>
                </ul>
              </div>
              <div class="premium-plan-btn">
                <form action="/onboarding" method="POST">
                  <input type="hidden" name="categoryCount" value="10" />
                  <% if(user){%>
                  <% if(user.paid == "free"){%>
                  <button type="button" type="button" id="premium"><span>Premium-Member werden</span><span><i
                        class="fa fa-long-arrow-right" aria-hidden="true"></i></span></button>
                  <% }%>
                  <% }%>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="paymentdialog">
  <div class="dialog-header">
    <h3 style="text-align: left;
    margin-left: 40px;margin-top: 0px;
    padding-top: 20px;">Please choose</h3>
  </div>
  <div class="dialog-container">
    <button class="btn btn-success btn-stripe" id="stripe-button">
      <i class="fa fa-cc-stripe stripicon" aria-hidden="true"></i><span class="stripetext">Stripe</span>
    </button>
    <div class="paypal-container"></div>
  </div>
  <div class="closedialog">
    <h1 class="text-white">&times;</h1>
  </div>
</div>
<div class="paymentdialog-background"></div>
<script src="/js/jquery-2.1.3.min.js" type="text/javascript"></script>
<script src="https://js.stripe.com/v3/"></script>
<script src="/js/membership.js"></script>
<script type="text/javascript">
  $(function () {
    $('#premium').click(function () {
      $('.paymentdialog').css('display', 'block');
      $('.paymentdialog-background').css('display', 'block');
    })
    $('.closedialog').click(function () {
      console.log("This is hte");
      $('.paymentdialog').css('display', 'none');
      $('.paymentdialog-background').css('display', 'none');
    })
    $('.paymentdialog-background').click(function () {
      console.log("This is hte");
      $('.paymentdialog').css('display', 'none');
      $('.paymentdialog-background').css('display', 'none');
    })
    $('#exampleModalCenter').on('shown.bs.modal', function () {
      $('#myInput').trigger('focus')
    })
  });
</script>
<script src="https://www.paypal.com/sdk/js?client-id=sb"></script>
<script>paypal.Buttons().render('.paypal-container');</script>
