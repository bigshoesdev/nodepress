<%- include ./partials/header %>
<link rel="stylesheet" href="/icofont/icofont.min.css">
<style>
    body {
        background: #f8f9fa !important;
    }

    .format {
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        text-transform: capitalize;
        display: block;
    }

    .form-control {
        padding: 5px 11px !important;
    }

    input[type=checkbox] {
        border: 1px solid #b4b9be;
        background: #fff;
        color: #555;
        clear: none;
        cursor: pointer;
        display: inline-block;
        line-height: 0;
        height: 16px;
        margin: -4px 4px 0 0;
        outline: 0;
        padding: 0 !important;
        text-align: center;
        vertical-align: middle;
        width: 16px;
        min-width: 16px;
        -webkit-appearance: none;
        box-shadow: inset 0 1px 2px rgba(0, 0, 0, 0.1);
        transition: 0.05s border-color ease-in-out;
    }

    input[type=checkbox]:checked:before {
        margin: 1px 0 0 -1px;
        color: #1e8cbe;
        content: "ï€Œ";
        font: normal normal normal 13px/1 FontAwesome;
    }

    .count-comment {
        box-sizing: border-box;
        display: inline-block;
        padding: 0 8px;
        min-width: 24px;
        height: 2em;
        border-radius: 5px;
        background-color: #72777c;
        color: #fff;
        font-size: 11px;
        line-height: 21px;
        text-align: center;
        transition: all 0.3s;
    }

    .count-comment:after {
        content: "";
        display: block;
        margin-left: 8px;
        width: 0;
        height: 0;
        border-top: 5px solid #72777c;
        border-right: 5px solid transparent;
    }

    ul.list {
        box-shadow: 0 .125rem .25rem rgba(0, 0, 0, .075) !important;
        border-radius: 0 !important;
    }

    .dropdown-menu {
        font-family: 'Roboto',
            sans-serif !important;
        font-weight: 500 !important;
        font-size: 13px;
        border: none;
        border-radius: 0;
        -webkit-box-shadow: -3px -3px 14px -1px rgba(0, 0, 0, 0.02),
            3px 3px 14px 1px rgba(0, 0, 0, 0.02), 2px 4px 18px 3px rgba(0, 0, 0, 0.015);
        -o-box-shadow: -3px -3px 14px -1px rgba(0, 0, 0, 0.02),
            3px 3px 14px 1px rgba(0, 0, 0, 0.02), 2px 4px 18px 3px rgba(0, 0, 0, 0.015);
        -ms-box-shadow: -3px -3px 14px -1px rgba(0, 0, 0, 0.02),
            3px 3px 14px 1px rgba(0, 0, 0, 0.02), 2px 4px 18px 3px rgba(0, 0, 0, 0.015);
        -moz-box-shadow: -3px -3px 14px -1px rgba(0, 0, 0, 0.02),
            3px 3px 14px 1px rgba(0, 0, 0, 0.02), 2px 4px 18px 3px rgba(0, 0, 0, 0.015);
        box-shadow: -3px -3px 14px -1px rgba(0, 0, 0, 0.02),
            3px 3px 14px 1px rgba(0, 0, 0, 0.02), 2px 4px 18px 3px rgba(0, 0, 0, 0.015);
    }

    .dropdown-menu a {
        transition: all ease-in-out 200ms;
        font-weight: 500 !important;
    }

    .dropdown-menu a {
        transition: all ease-in-out 200ms;
        font-weight: 500 !important;
    }
    .btn-bsa {
        background: #acbb16;
        color: #fff;
        transition: all ease-in-out .3s;
    }

    .btn-bsa:hover {
        background: #000;
        color: #fff;
    }
</style>
<%- include ./partials/sidebar %>
<!-- Content Body Start -->
<div class="content-body" style="overflow: hidden;">
    <!-- Page Headings Start -->
    <div class="row justify-content-between align-items-center mb-10">

        <!-- Page Heading Start -->
        <div class="col-md-8 col-lg-auto mb-20">
            <div class="page-heading">
                <h3>Reading List</h3>
            </div>
        </div><!-- Page Heading End -->

    </div><!-- Page Headings End -->
    <%- include ../partials/msg %>

    <div class="row ">

        <!--Manage Product List Start-->
        <div class="col-12">
            <form action method="GET" id="bulkDeleteForm">
                <div class="table-responsive bg-white shadow-sm">
                    <% if(bookmark == "") { %>
                    <div class="alert alert-primary">No Article in your Reading List</div>
                    <% } %>
                    <table class="table table-vertical-middle">
                        <thead>
                            <tr>
                                <th>Article Title</th>
                                <th>Category</th>
                                <th>Post Type</th>
                                <th>Author</th>
                                <th>Article Posted Date</th>
                                <th>Bookmarked Date</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                           <% bookmark.map(data => { %>
                            <tr>
                                <td>
                                    <%= data.articleId.title %>
                                </td>
                                <td>
                                    <%= data.articleId.category.name %>
                                </td>
                                <td>
                                    <%= data.articleId.postType %>
                                </td>
                                <td><%= data.articleId.postedBy.username %></td>
                                <td><%= data.articleId.createdAt.toDateString() %></td>
                                <td><%= data.createdAt.toDateString() %></td>
                                <td>
                                    <a href="/post/<%= data.articleId.slug %>" target="_blank"><button type="button" class="btn btn-success btn-sm">View Post</button></a>
                                    <a href="/bookmark/delete?bookmarkId=<%= data._id %>">
                                        <button type="button" class="btn btn-danger btn-sm">Remove</button>
                                    </a>
                                </td>
                            </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </form>
        </div>
        <!--Manage Product List End-->
    </div>
</div><!-- Content Body End -->

<!-- Footer Section Start -->
<div class="footer-section">
    <div class="container-fluid">

        <div class="footer-copyright text-center">
            <p class="text-body-light">
                <script>document.write(new Date().getFullYear())</script> &copy; <a
                    href="<%= siteLink %>"><%= siteTitle %></a></p>
        </div>

    </div>
</div><!-- Footer Section End -->

