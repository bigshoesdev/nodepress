<script src="/assets/js/plugins/moment/moment.min.js"></script>
<script>
    $(function () {
        var firstname = $('#firstname').val();
        var lastname = $('#lastname').val();
        var email = $('#email').val();
        var birthday = $('#birthday').val();
        var phone = $('#phone').val();
        var about = $('#about').val();
        var sociallinkedin = $('#sociallinkedin').val();
        var socialtwitter = $('#socialtwitter').val();
        var socialinstagram = $('#socialinstagram').val();
        var socialfacebook = $('#socialfacebook').val();
        var tax = $('#tax').val();
        var percent = 0;
        if (firstname != 'Not Specified') {
            percent = percent + 10;
        }
        if (lastname != 'Not Specified') {
            percent = percent + 10;
        }
        if (email != "") {
            percent = percent + 10;
        }
        if (birthday != "") {
            percent = percent + 10;
        }
        if (phone != "") {
            percent = percent + 10;
        }
        if (about != "") {
            percent = percent + 10;
        }
        if (sociallinkedin != "" || socialinstagram != "" || socialtwitter != "" || socialfacebook != "") {
            percent = percent + 40;
        }
        if (percent == 100) {
            $('#postenable').val("true");
            $('.profile_text').text('Glückwunsch! Veröffentliche jetzt deinen ersten Artikel.');
            $('.tax-field').css('display', 'block');
        } else {
            $('#postenable').val("false");
        }
        $('.progress-bar').css('width', percent + "%");
    })
    // Avatar Switcher
    function avatarSwitcher() {
        var readURL = function (input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                reader.onload = function (e) {
                    $('.profile-pic').attr('src', e.target.result);
                };
                reader.readAsDataURL(input.files[0]);
                setTimeout(() => {
                    $('#profilePicForm').submit()
                }, 2000)
            }
        };
        $("#clickMe").on('change', function () {
            readURL(this);
        });
        $('.edit').click(e => {
            $('#clickMe').click()
        })
    } avatarSwitcher();
</script>
<script>
    $(document).ready(function () {
        $("[href]").each(function () {
            if (this.href == window.location.href) {
                $(this).parent().addClass("active");
            }
        });
    });
</script>
</body>

</html>