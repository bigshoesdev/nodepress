    <div class="row justify-content-between align-items-center mb-10">

        <!-- Page Heading Start -->
        <div class="col-md-4  mb-20">
            <div class="form-group d-flex">
                <select id="bulkSelect" class="form-control form-control-sm bulk">
                    <option selected="selected" disabled="disabled">Bulk Actions</option>
                    <option value="publish">Publish</option>
                    <option value="addToSlider">Add To Editor's Pick</option>
                    <option value="addToRecommended">Add To Recommended</option>
                    <option value="addToBreaking">Add To Breaking</option>
